<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/max_radius"
    android:paddingBottom="2dp"
    android:paddingStart="@dimen/min_space"
    android:layout_marginEnd="@dimen/medium_space">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/game_min_info_item_height"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/min_space"
            android:layout_marginStart="@dimen/min_space"
            app:cardBackgroundColor="@color/colorPrimary"
            android:elevation="@dimen/medium_elevation"
            app:cardCornerRadius="@dimen/max_radius"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/min_space"
            android:layout_marginEnd="@dimen/min_space"
            app:cardCornerRadius="@dimen/max_radius">
            <ImageView
                android:id="@+id/banner_game_min_info_imv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/banner_test"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2.5"
                    android:paddingTop="@dimen/medium_space"
                    android:paddingStart="@dimen/medium_space">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/pay_type_frame"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent">
                        <TextView
                            android:id="@+id/pay_type_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/min_text_size"
                            android:textColor="@color/white"
                            android:paddingVertical="@dimen/minnn_space"
                            android:textStyle="bold"
                            android:paddingHorizontal="@dimen/min_space"
                            android:background="#FFEB3B"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/platform_rclv"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/ic_min_size"
                        app:layout_constraintTop_toBottomOf="@id/pay_type_frame"
                        app:layout_constraintStart_toStartOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!--Name-->
                <TextView
                    android:id="@+id/game_name_min_info_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/min_space"
                    android:paddingHorizontal="@dimen/medium_space"
                    android:background="@drawable/shape_dim_fader_corner_rectangle"
                    android:textStyle="bold"
                    android:textSize="@dimen/normal_text_size"
                    android:lines="2"
                    android:ellipsize="end"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </FrameLayout>

</LinearLayout>