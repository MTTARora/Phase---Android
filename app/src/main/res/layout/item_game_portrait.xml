<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/normal_width_img"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/medium_space">

    <androidx.cardview.widget.CardView
        android:id="@+id/frame_item_game_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardCornerRadius="@dimen/max_radius"
        app:layout_constraintDimensionRatio="1:1.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/banner_game_info_imv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/banner_test" />

        <carbon.widget.RecyclerView
            android:id="@+id/platform_item_game_info_rclv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/medium_space"
            android:layout_marginEnd="@dimen/medium_space"
            android:background="@color/colorPrimaryDark"
            android:elevation="@dimen/max_elevation"
            android:paddingVertical="@dimen/min_space"
            android:paddingStart="@dimen/min_space"
            app:carbon_cornerRadius="@dimen/maxx_radius"
            app:carbon_elevationShadowColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/pay_type_item_game_info_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/shape_dim_fader_corner_rectangle"
            android:paddingHorizontal="@dimen/medium_space"
            android:paddingTop="@dimen/max_space"
            android:paddingBottom="@dimen/medium_space"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/normal_text_size" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/game_name_item_game_info_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/min_space"
        android:ellipsize="end"
        android:lines="2"
        android:paddingHorizontal="@dimen/medium_space"
        android:textColor="@color/colorText"
        android:textSize="@dimen/sub_title_text_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/frame_item_game_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frame_item_game_info" />


</androidx.constraintlayout.widget.ConstraintLayout>