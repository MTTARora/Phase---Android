<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/normal_space">

    <carbon.widget.ImageView
        android:id="@+id/ic_suggestion"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/banner_test"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent=".11"
        app:carbon_cornerRadius="@dimen/medium_radius"/>

    <TextView
        android:id="@+id/suggestion_game_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/normal_space"
        android:gravity="center|start"
        android:lines="2"
        android:maxLines="2"
        android:textColor="@color/carbon_black"
        android:text="@string/category_advanced_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ic_suggestion"
        app:layout_constraintTop_toTopOf="@id/ic_suggestion" />

</androidx.constraintlayout.widget.ConstraintLayout>