<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/refresh_layout_home_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="@dimen/normal_space"
            android:paddingBottom="@dimen/normal_space">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/new_game_vp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/normal_space"/>

            <!--Recent Play-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/medium_space">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/min_space"
                    android:layout_marginBottom="@dimen/min_space">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/recent_play_title"
                        android:textSize="@dimen/title_text_size"
                        android:gravity="center_vertical"/>
                    <!--<Button-->
                    <!--    android:id="@+id/btn_add_task"-->
                    <!--    android:layout_width="wrap_content"-->
                    <!--    android:layout_height="wrap_content"-->
                    <!--    android:text="@string/add"-->
                    <!--    android:background="@android:color/transparent"-->
                    <!--    android:textColor="@color/colorAccent"-->
                    <!--    android:textAlignment="textEnd"-->
                    <!--    android:textAllCaps="false"-->
                    <!--    android:textSize="@dimen/title_text_size"-->
                    <!--    android:textStyle="bold"/>-->
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recent_play_rclv_home_screen"
                    android:clipToPadding="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/medium_space"/>

            </LinearLayout>

            <!--Editor's choice-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/medium_space">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/min_space"
                    android:layout_marginBottom="@dimen/min_space">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/editors_choice_title"
                        android:textSize="@dimen/title_text_size"
                        android:gravity="center_vertical"/>
                    <!--<Button-->
                    <!--    android:id="@+id/btn_add_task"-->
                    <!--    android:layout_width="wrap_content"-->
                    <!--    android:layout_height="wrap_content"-->
                    <!--    android:text="@string/add"-->
                    <!--    android:background="@android:color/transparent"-->
                    <!--    android:textColor="@color/colorAccent"-->
                    <!--    android:textAlignment="textEnd"-->
                    <!--    android:textAllCaps="false"-->
                    <!--    android:textSize="@dimen/title_text_size"-->
                    <!--    android:textStyle="bold"/>-->
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/editors_choice_rclv_home_screen"
                    android:clipToPadding="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/medium_space"/>

            </LinearLayout>

            <!--Hot-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/medium_space">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/min_space"
                    android:layout_marginBottom="@dimen/min_space">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/hot_title"
                        android:textSize="@dimen/title_text_size"
                        android:gravity="center_vertical"/>
                    <!--<Button-->
                    <!--    android:id="@+id/btn_add_task"-->
                    <!--    android:layout_width="wrap_content"-->
                    <!--    android:layout_height="wrap_content"-->
                    <!--    android:text="@string/add"-->
                    <!--    android:background="@android:color/transparent"-->
                    <!--    android:textColor="@color/colorAccent"-->
                    <!--    android:textAlignment="textEnd"-->
                    <!--    android:textAllCaps="false"-->
                    <!--    android:textSize="@dimen/title_text_size"-->
                    <!--    android:textStyle="bold"/>-->
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/hot_game_rclv_home_screen"
                    android:clipToPadding="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/medium_space"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>